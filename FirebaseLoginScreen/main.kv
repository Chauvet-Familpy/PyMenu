<SearchMenu>: 
    id:searchmenu
    name:"searchmenu"
    GridLayout:
        clearcolor : 0,0, 1, 1
        cols :1
        Label:
            text:'recherche'
        TextInput:
            on_text:app.text(args[1])
        Label:
            text:'vg'
        CheckBox:
            active:False
            on_press: app.veg(args[0])
        Label:
            text:'prix'
        ToggleButton:
            group:'exp'
            text:"1"
            on_press:app.exp_last_pressed(args)
        ToggleButton:
            group:'exp'
            text:"2"
            on_press:app.exp_last_pressed(args)
        ToggleButton:
            group:'exp'
            text:"3"
            on_press:app.exp_last_pressed(args)
        ToggleButton:
            group:'exp'
            text:"4"
            on_press:app.exp_last_pressed(args)
        Label:
            text:"difficulte"
        ToggleButton:
            group:'dif'
            text:"1"
            on_press:app.dif_last_pressed(args)
        ToggleButton:
            group:'dif'
            text:"2"
            on_press:app.dif_last_pressed(args)
        ToggleButton:
            group:'dif'
            text:"3"
            on_press:app.dif_last_pressed(args)
        Button: 
            text: "Chercher" 
            background_color : 0, 0, 1, 1 
            on_press: 
                app.search(args)
                # You can define the duration of the change 
                # and the direction of the slide 
                app.screen_manager.transition.direction = 'left' 
                app.screen_manager.transition.duration = 1 
                
        Label:
            text:'Generer les menus'
            
        Label:
            text:app.txtNbPersonnes
        TextInput:
            on_text:app.defnbPersonnes(args[1])
        Label:
            text:app.txtNbRepas
        TextInput:
            on_text:app.defnbRepas(args[1])
        Button:
            text:"Generer les menus"
            on_press:
                app.generateMenu()
                app.screen_manager.transition.direction = 'right' 
                app.screen_manager.transition.duration = 1 
                app.screen_manager.current="menuGenerator"
                

<MenuGenerator>:
    id:menuGenerator
    name:"menuGenerator"
    GridLayout:
        cols:1
        rows:2
        ScrollView:
            id:sv_menu_generator
            size_hint:1, None
            size:Window.width, Window.height*0.9
            GridLayout:
                cols:1
                spacing:10
                id:box_menu
                height: self.minimum_height*1.6
                size_hint_y:None
        Button:
            text:"Retour"
            on_press:
                app.screen_manager.current="searchmenu"
                app.screen_manager.transition.direction = 'left' 
                app.screen_manager.transition.duration = 1 
                        
<ModifyMenu>:
    GridLayout:
        id:grid_modify0
        cols:1
        rows:3
        BoxLayout:
            orientation:"horizontal"
            spacing:10
            TextInput:
                id:search_modify
                size_int:0.9,0.1
            Button:
                text:"go"
                on_release:
                    app.search_in_modify_menu(search_modify.text)
        ScrollView:
            size_hint:1, None
            size:Window.width, Window.height*0.9
            GridLayout:
                spacing:10
                cols:1
                id:grid_modify
                height: self.minimum_height*4
                size_hint_y:None
        
        


        Button:
            text:"Retour"
            on_press:
                app.screen_manager.current="menuGenerator"
                app.screen_manager.transition.direction = 'left' 
                app.screen_manager.transition.duration = 1 
